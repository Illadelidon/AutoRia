@using AutoRia.Core.Entities.User;
@using Microsoft.AspNetCore.Identity;
@using AutoRia.Core.Dto_s.Post;
@model PostDto
@inject UserManager<AppUser> UserManager

@{
    var user = await UserManager.GetUserAsync(User);
    var email = await UserManager.GetEmailAsync(user);
}

<!-- Navbar -->
<div class="container">
    <nav class="navbar navbar-expand-lg  bg-light">
        <!-- Container wrapper -->
        <div class="container-fluid">
            <!-- Collapsible wrapper -->
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <!-- Navbar brand -->
                <a class="navbar-brand mt-2 mt-lg-0 logotext" asp-action="Index">
                    Auto Ria
                </a>

            </div>
            <!-- Collapsible wrapper -->
            <!-- Right elements -->
            <div class="d-flex align-items-center">
                <!-- Icon -->
                <a class="text-reset me-3" href="#">
                    <i class="fas fa-shopping-cart"></i>
                </a>
                <!-- Avatar -->

                <a asp-action="Profile" asp-route-id="@user.Id" class="btn btn-outline-primary m-1">@user.UserName</a>
                <a asp-action="Logout" class="btn btn-outline-primary m-1">Log Out</a>
            </div>
            <!-- Right elements -->
        </div>
        <!-- Container wrapper -->
    </nav>
    <!-- Navbar -->


    
    <div class="container row mt-3">



        <div class="card col-4">
            <ul class="mt-2 list-group list-group-flush border-start-1 border-end-1">
                <li class="list-group-item px-3">@Model.BrandCar @Model.ModelCar</li>
                <li class="list-group-item px-3 priceText">Ціна:@Model.Price @Model.Currency</li>
                <li class="list-group-item px-3">Рік:@Model.GraduationYear</li>
                <li class="list-group-item px-3">Пробіг:@Model.MileageCar км</li>
                <li class="list-group-item px-3">Колір:@Model.Color</li>
                <li class="list-group-item px-3">Місто:@Model.Sity</li>
                <li class="list-group-item px-3">Дтп:@Model.Accident</li>
                <li class="list-group-item px-3">Пригнаний з:@Model.ProducingCountry</li>
                @if (Model.UserId == user.Id)
                {
                    <div class="row justify-content-between">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="mt-5 m-2 btn btn-warning col-4  ">Edit</a>
                        <a asp-action="DeleteById" asp-route-id="@Model.Id" class="mt-5 m-2 btn btn-danger col-4">Delete</a>
                    </div>
                    
                }
            </ul>
        </div>



      
        <div class="col-4">
    <div id="carouselExample" class="carousel slide">
        <div class="carousel-inner">
            <div class="carousel-item active">
                        <img src="~/img/@Model.MainImage" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                        <img src="~/img/@Model.MainImage" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                        <img src="~/img/@Model.MainImage" class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
        </div>
    </div>



    
